<div class="btn-group pull-right">
  <button class="btn btn-default dropdown-toggle" type="button" data-toggle="dropdown">
    ¿Problemas? <span class="caret"></span>
  </button>
  <ul class="dropdown-menu" role="menu">
    <%- if controller_name != 'sessions' %>
      <li> <%= link_to "Iniciar sesión", new_session_path(resource_name), class: "btn btn-link"%> </li>
    <% end -%>
    <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
      <li> <%= link_to "Registrarse", new_registration_path(resource_name), class: "btn btn-link" %> </li>
    <% end -%>

    <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
      <li> <%= link_to "Recuperar contraseña", new_password_path(resource_name), class: "btn btn-link" %> </li>
    <% end -%>

    <%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
      <li> <%= link_to "Reenviar confirmación", new_confirmation_path(resource_name), class: "btn btn-link" %> </li>
    <% end -%>
  </ul>
</div>



