<div class="container">
  <div class="page-header">
    <h1>Administrar torneo</h1>
  </div>

  <%= simple_form_for @tournament do |f| %>
    <fieldset style="margin-bottom: 1.5em;">
      <legend>Datos generales</legend>
      <div class="row">
        <div class="col-md-6">
          <%= f.input :name %>
        </div>
        <div class="col-md-6">
          <%= f.input :strategy, include_blank: false %>
        </div>
      </div>

      <div class="pull-right">
        <%= f.button :submit, "Actualizar", class: "btn btn-primary" %>
        <%= link_to "Cancelar", root_path, class: "btn btn-default" %>
      </div>
      <div class="clearfix"></div>
    </fieldset>

    <fieldset>
      <legend>
        Equipos
        <%= link_to new_tournament_team_path(@tournament), class: "btn btn-danger btn-sm pull-right" do %>
          <span class="glyphicon glyphicon-plus"></span> Nuevo equipo
        <% end %>
        <div class="clearfix"></div>
      </legend>

      <table class="table table-condensed table-striped">
        <thead>
          <tr>
            <th>Nombre</th>
            <th></th>
          </tr>
        </thead>
        <tbody>

        <% @tournament.teams.each do |team| %>
          <tr>
            <td><%= team.name %></td>
            <td class="text-right">
              <%= link_to edit_tournament_team_path(@tournament, team), class: "btn btn-default btn-sm" do %>
                <span class="glyphicon glyphicon-pencil"></span> Editar
              <% end %>
              <%= link_to tournament_team_path(@tournament, team), method: :delete, class: "btn btn-default btn-sm" do %>
                <span class="glyphicon glyphicon-trash"></span> Eliminar
              <% end %>
            </td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </fieldset>
  <% end %>
</div>


