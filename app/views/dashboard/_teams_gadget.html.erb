<h2>
  <i class="fa fa-users"></i> Mis equipos
  <div class="clearfix"></div>
</h2>

<% unless current_user.joined_teams? %>
  <div class="well text-center">
    <p>No se ha unido a ningún equipo aún.</p>
  </div>
<% else %>
  <table class="table table-condensed table-striped">
    <thead>
      <tr>
        <th>Nombre</th>
        <th>Torneo</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
    <% current_user.joined_teams.each do |team| %>
      <tr>
        <td>
          <%= team.name %>
        </td>
        <td>
          <%= team.tournament.name %>
        </td>
        <td class="text-right">
          <%= link_to team_path(team), class: "btn btn-default btn-sm" do %>
            <i class="fa fa-search"></i> Ver
          <% end %>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
<% end %>

